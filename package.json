{
  "name": "@gsx/gsx-utils",
  "version": "1.0.0",
  "repository": "https://github.com/gentasumantri/gsx-utils",
  "author": "Genta Sumantri <gentaaaa@outlook.co.id>",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "deploy": "truffle migrate",
    "deploy:reset": "truffle migrate --reset",
    "deploy:live": "truffle migrate --network live | tee logs/migrations_live.log",
    "deploy:live:reset": "truffle migrate --network live --reset | tee logs/migrations_live.log",
    "deploy:testnet": "truffle migrate --network testnet | tee logs/migrations_testnet.log",
    "deploy:testnet:reset": "truffle migrate --network testnet --reset | tee logs/migrations_testnet.log",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:sol:fix": "solhint contracts/**/*.sol --fix",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:js:fix": "eslint . --ignore-path .gitignore --fix",
    "prettier": "npm run prettier:js && npm run prettier:sol",
    "prettier:fix": "npm run prettier:js:fix && npm run prettier:sol:fix",
    "prettier:js": "prettier --check **.js --ignore-path .gitignore",
    "prettier:js:fix": "prettier --check **.js --ignore-path .gitignore --write",
    "prettier:sol": "prettier --check contracts/**/*.sol",
    "prettier:sol:fix": "prettier --check contracts/**/*.sol --write",
    "reset": "rimraf build mochawesome-report artifacts cache",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@gsx/bsc-genesis": "https://github.com/gentasumantri/bsc-genesis",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "2.5.0",
    "@openzeppelin/test-helpers": "^0.5.12",
    "@truffle/hdwallet-provider": "^1.4.1",
    "@uniswap/lib": "^4.0.1-alpha",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "2.5.0",
    "hardhat-gas-reporter": "^1.0.4",
    "mochawesome": "^6.2.2",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.15",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "truffle": "^5.4.0",
    "truffle-plugin-verify": "^0.5.11",
    "web3": "^1.4.0"
  }
}
